// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 24, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "sway/workspaces",
        "sway/scratchpad",
        "sway/mode"
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "mpd",
        "tray",
        // "idle_inhibitor",
        "power-profiles-daemon",
        "custom/do-not-disturb",
        // "temperature",
        // "cpu",
        "memory",
        "backlight",
        "pulseaudio",
        "network",
        "battery",
        "battery#bat2",
        "keyboard-state",
        "sway/language",
        "clock"
    ],
    // Modules configuration
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "numeric-first": true
        // "format": "{icon} {name}",
        // "format-icons": {
        //     "urgent": "ÔÅ™",
        //     "focused": "ÔÜí",
        //     "default": "ÔÑë"
        // }
    },
    "custom/do-not-disturb": {
      "tooltip": true,
      "tooltip-format": "Toggle the Do Not Disturb mode",
      "format": "{icon}",
      "format-icons": {
        "normal": "ÔÇ¢",
        "dnd": "Ôá∑"
      },
      "return-type": "json",
      "exec": "~/dotfiles/waybar/dnd.sh get",
      "interval": "once",
      "on-click": "~/dotfiles/waybar/dnd.sh toggle"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{icon} {name}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "sway/window": {
      "format": "<{shell}> {title}",
      "rewrite": {
        "<xwayland> (.*)": "[XWayland] $1",
        "<xdg_shell> (.*)": "$1"
      }
    },
    "sway/language": {
        "format": "ÔÑú  {shortDescription}",
        "tooltip-format": "{short}: {long}",
        "on-click": "swaymsg input type:keyboard xkb_switch_layout next"
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "mpd": {
        "format": "ÔÄÅ  {stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}%",
        "format-disconnected": "ÔÄÅ  Disconnected",
        "format-stopped": "ÔÄÅ  {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y-%m-%d}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%a %b %d %H:%M}"
        // "format-alt": "{:%Y-%m-%d}"
    },
    // "cpu": {
    //     "interval": 10,
    //     "format": "Ôãõ  {usage}%",
    //     "tooltip": true
    // },
    "memory": {
        "interval": 10,
        "format": "ÓøÖ  {percentage}%",
        "tooltip-format": "Avail: {avail} GiB\nSwap:  {swapUsed} GiB ({swapPercentage}%)"
    },
    // "temperature": {
    //     // "thermal-zone": 2,
    //     // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    //     // "critical-threshold": 80,
    //     // "format-critical": "{temperatureC}¬∞C {icon}",
    //     "format": "{icon} {temperatureC}¬∞C",
    //     "format-icons": ["Ôãâ"]
    // },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon}  {percent}%",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}%",
        "format-full": "{icon}  {capacity}%",
        "format-charging": "Ôóß  {capacity}%",
        "format-plugged": "Ôá¶  {capacity}%",
        "tooltip-format": "{timeTo}",
        // "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        // "interface": "eth0", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´   {signalStrength}%",
        "format-ethernet": "Óºâ",
        "format-linked": "Óºâ {ifname} (No IP)",
        "format-disconnected": "Disconnected ‚ö†",
        "tooltip-format-ethernet": "Interface: {ifname}\nIP address: {ipaddr}\nMask: {netmask}\nGateway: {gwaddr}",
        "tooltip-format-wifi": "SSID: {essid} ({frequency} GHz)\nRSSI: {signaldBm} dBm\nInterface: {ifname}\nIP address: {ipaddr}\nMask: {netmask}\nGateway: {gwaddr}",
        "tooltip-format-disconnected": "Disconnected",
        "tooltip-format-disabled": "Disabled"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        // "format": "{volume}% {icon} {format_source}",
        "format": "{icon}  {volume}%{format_source}",
        "format-bluetooth": "{icon}  {volume}% Ôäî{format_source}",
        "format-bluetooth-muted": "<big>Û∞ùü</big>  Ôäî{format_source}",
        "format-muted": "<big>Û∞ùü</big>{format_source}",
        // "format-source": "   ÔÑ∞  {volume}%",
        "format-source": "",
        "format-source-muted": "   ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        // "on-click": "pwvucontrol"
        "on-click": "pavucontrol"
    }
